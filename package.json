{
  "name": "atomx-monorepo",
  "type": "module",
  "private": true,
  "description": "Fast, simple, reactive, framework-agnostic state manager",
  "scripts": {
    "dev": "node scripts/build.js --watch",
    "build": "pnpm --filter ./packages/core build && pnpm --filter ./packages/react build && pnpm --filter ./packages/vue build",
    "test": "pnpm -r test",
    "lint": "eslint packages/**/*.{ts,tsx,vue}",
    "size": "size-limit"
  },
  "keywords": [
    "state-management",
    "react",
    "vue",
    "svelte",
    "agnostic"
  ],
  "author": "Dyukov Vladislav<dyukovlad@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.5",
    "@size-limit/preset-small-lib": "^10.0.0",
    "@types/react": "^18.2.0",
    "rollup": "^4.0.0",
    "size-limit": "^10.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "size-limit": [
    {
      "path": "packages/core/dist/index.js",
      "limit": "4 KB"
    }
  ]
}